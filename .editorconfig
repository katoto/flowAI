# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Indentation
[*]
indent_style = space
indent_size = 2

# File-specific rules
[*.js]
indent_size = 2
tab_width = 2

[*.jsx]
indent_size = 2
tab_width = 2

[*.ts]
indent_size = 2
tab_width = 2

[*.tsx]
indent_size = 2
tab_width = 2
